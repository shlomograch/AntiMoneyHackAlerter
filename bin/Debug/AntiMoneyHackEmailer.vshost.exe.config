<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <!--Your database Connection Information-->
    <add key="ServerIP" value="0.0.0.0" />
    <add key="DbPort" value="3306" /> <!--Leave at 3306 if you are un-sure of your connection port-->
    <add key="DbUserID" value="DatabaseUserId" />
    <add key="DbPassword" value="DatabasePassword" />
    <add key="DbName" value="arma3life"/> <!--By default it would be arma3Life, if it's something else change it here.-->
    
    <!--The amount of money to check if the user has on hand or in bank Account-->
    <add key="CashOnHand" value="100000000"/> <!--Current Value: 100 Million-->
    <add key="BankCash" value="100000000"/> <!--Current Value: 100 Million-->
    
    <!--Start of Email options-->
    <add key="EmailSubject" value="[ANTI-HACK] Possible Hacker Alert System -- " />
    <add key="ToEmail" value="Input who you want to send this to" />
    
    <!--You can change the "fromEmail" & "fromPassword" to your own if you want to use a local email account-->
    <add key="FromEmail" value="Type your email" />
    <add key="FromPassword" value="Type your emails password" />
    
    <!--If you use gmail keep it the same otherwise you'll need to find out what the smtp address is for your email provider.-->
    <add key="smtpHost" value="smtp.gmail.com" />
    <add key="smtpPort" value="587" />
  </appSettings>
</configuration>